{
  "crons": [
    {
      "path": "/api/cron/clean-cache",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/clean-usage",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/clean-redemption",
      "schedule": "0 4 * * *"
    }
  ],
  "functions": {
    "app/api/*/route.ts": {
      "maxDuration": 180
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
